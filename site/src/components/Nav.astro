---
const base = import.meta.env.BASE_URL;
---

<nav class="bg-verity-surface border-b border-verity-border text-verity-text-primary">
  <div class="max-w-6xl mx-auto px-4 py-3 flex items-center gap-4">
    <a href={base} class="flex items-center gap-3 hover:opacity-80 transition-opacity group">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 80 80"
        width="32"
        height="32"
        class="flex-shrink-0"
      >
        <defs>
          <linearGradient id="navTeal" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#00F0CC"></stop>
            <stop offset="100%" stop-color="#0099A8"></stop>
          </linearGradient>
          <filter id="navGlow">
            <feGaussianBlur stdDeviation="2" result="blur"></feGaussianBlur>
            <feMerge
              ><feMergeNode in="blur"></feMergeNode><feMergeNode in="SourceGraphic"
              ></feMergeNode></feMerge
            >
          </filter>
        </defs>
        <ellipse
          cx="40"
          cy="40"
          rx="26"
          ry="9"
          fill="none"
          stroke="#00F0CC"
          stroke-width="1"
          stroke-opacity="0.5"></ellipse>
        <ellipse
          cx="40"
          cy="40"
          rx="26"
          ry="9"
          fill="none"
          stroke="#0099A8"
          stroke-width="1"
          stroke-opacity="0.45"
          transform="rotate(60 40 40)"></ellipse>
        <ellipse
          cx="40"
          cy="40"
          rx="26"
          ry="9"
          fill="none"
          stroke="#00CCAA"
          stroke-width="1"
          stroke-opacity="0.4"
          transform="rotate(-60 40 40)"></ellipse>
        <circle cx="66" cy="40" r="2.8" fill="#00F0CC" filter="url(#navGlow)"></circle>
        <circle cx="53" cy="62.5" r="2.4" fill="#0099A8" filter="url(#navGlow)"></circle>
        <circle cx="53" cy="17.5" r="2.4" fill="#00CCAA" filter="url(#navGlow)"></circle>
        <circle
          cx="40"
          cy="40"
          r="8"
          fill="#060D12"
          stroke="#00F0CC"
          stroke-width="1.3"
          filter="url(#navGlow)"></circle>
        <circle cx="40" cy="40" r="4" fill="url(#navTeal)" filter="url(#navGlow)"></circle>
      </svg>
      <div class="flex flex-col">
        <span class="text-lg font-bold tracking-[0.4em] leading-none">VERITY</span>
        <span class="text-[0.6rem] tracking-[0.25em] text-verity-text-secondary uppercase mt-0.5"
          >Container Security</span
        >
      </div>
    </a>
    <div class="ml-auto">
      <a
        href={`${base}compliance/`}
        class="text-sm text-verity-text-muted hover:text-verity-nucleus transition-colors"
      >
        Compliance
      </a>
    </div>
  </div>
</nav>
